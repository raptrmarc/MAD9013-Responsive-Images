.wrapper{
  max-width: 1024px;
  margin: 0 auto;
}
img{
	width: 100%;
	margin-bottom: 5px	
} 


picture {
    width: 100%;
    margin-bottom: 5px;
}

@media all and (min-width: 600px) and (max-width: 1024px) {
    .col {
    -webkit-column-count: 2;
    -moz-column-count: 2;
    -o-column-count: 2;
    column-count: 2;
    }
}

@media all and (min-width: 1024px) {
    .col {
    -webkit-column-count: 3;
    -moz-column-count: 3;
    -o-column-count: 3;
    column-count: 3;
    }
}


